<h2>Sign up</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-group flex-nowrap">
    <%= f.label :email, class:"input-group-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<br>
  <div class="input-group flex-nowrap">
    <%= f.label :name, class:"input-group-text" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
<br>
  <div class="input-group flex-nowrap">
    <%= f.label :phone, class:"input-group-text" %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>
<br>
  <div class="input-group flex-nowrap">
    <%= f.label :password, class:"input-group-text" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <br>
     <i>(<%= @minimum_password_length %> characters minimum)</i>
  </div>
  <div class="input-group flex-nowrap">
    <%= f.label :password_confirmation, class:"input-group-text" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<br>
<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
 