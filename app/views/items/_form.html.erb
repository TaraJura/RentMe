<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="row mb-3">
<%= form.label :name %>
    <div class="col-sm-10">
      <%= form.text_field :name %>
    </div>
</div>

<div class="row mb-3">
<%= form.label :text %>
    <div class="col-sm-10">
      <%= form.text_area :text %>
    </div>
</div>

<div class="field mb-3 ">
  <%= form.label "Rented_by" %>
      <div class="col-sm-10">
        <%= form.select :user_id , User.pluck(:name , :id) %>
      </div>
</div>

<div class="field mb-3 ">
  <%= form.label :owner_id %>
      <div class="col-sm-10">
        <%= form.select :owner_id , User.pluck(:name , :id) %>
      </div>
</div>

<td><%= item.rental_periods.last&.to %></td>

<br>
  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
